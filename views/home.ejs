<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head.ejs') %>
    <title>Blogging Platform - Home</title>
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include('partials/navbar.ejs') %>

    <div class="container my-5">
        <h1 class="text-center mb-4">All Blogs</h1>

        <div class="row g-4">
            <% blogs.forEach(blog => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm rounded-4">
                        <img src="<%= blog.image %>" class="card-img-top rounded-top-4" alt="Blog image" style="height: 150px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <p class="card-text text-truncate"><%= blog.body %></p>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">Read More</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('partials/script.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
