<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .comment-avatar {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 50%;
            margin-right: 10px;
        }

        .comment-box {
            max-width: 700px;
            margin: auto;
            padding: 20px;
        }

        .comment-input {
            resize: none;
        }

        .comment-user {
            font-weight: 600;
        }

        .comment-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 15px;
        }

        .comment-content {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 10px 15px;
            width: 100%;
        }
    </style>
</head>

<body>
    <div class="container comment-box">
        <h3 class="mb-4">ðŸ’¬ Comments</h3>

        <!-- Comment Form -->
        <form action="/blog/<%= blog._id %>/comment" method="POST" class="mb-4">
            <div class="mb-3">
                <textarea name="content" rows="3" class="form-control comment-input"
                    placeholder="Write your comment..." required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Post Comment</button>
        </form>

        <!-- Display Comments -->
        <% comments.forEach(function(comment) { %>
            <div class="comment-item">
                <% if (comment.userId) { %>
                    <img src="<%= comment.userId.profilePicture %>" class="comment-avatar"
                        alt="<%= comment.userId.fullname %>'s avatar" />
                    <div class="comment-content">
                        <div class="comment-user"><%= comment.userId.fullname %></div>
                        <div><%= comment.content %></div>
                    </div>
                <% } else { %>
                    <div class="comment-content">
                        <div class="comment-user text-muted"><em>Deleted user</em></div>
                        <div><%= comment.content %></div>
                    </div>
                <% } %>
            </div>
        <% }) %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
